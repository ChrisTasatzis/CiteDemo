@using _03_CiteDemoPresentationLayer.Models.Attribute
@{
    ViewData["Title"] = "Attributes Page";
}

@model UpdateViewModel

<div class="text-center">
    <h1 class="display-4">Insert a new attribute</h1>
   
    <form asp-controller="Attribute" asp-action="UpdatePost" method="post">

        <input type="hidden" asp-for="Id" value="@(Model.Id)" />
        <div class="form-floating mb-3 mt-3">  
            <input asp-for="Name" type="text" class="form-control" value="@(Model.Name)" name="Name"/>
            <label asp-for="Name"  >Name:</label>
        </div>

        <div class="form-floating mb-3 mt-3">  
            <input asp-for="Value" type="text" class="form-control" value="@(Model.Value)" name="Value"/>
            <label asp-for="Value"  >Value:</label>
        </div>

        <div class="mb-3 mt-3">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>

         <div asp-validation-summary="All" class="text-danger"></div>
    </form>
            
</div>
